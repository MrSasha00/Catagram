@if (_posts != null && _posts.Count != 0)
{
	<div class="container" style="display: flex; align-items: center; flex-flow: column">
		<MainFeed Posts="_posts" IsEdit="false"/>
	</div>
}
else
{
	<div class="d-flex justify-content-center">
		<div class="spinner-border" role="status">
			<span class="visually-hidden">Loading...</span>
		</div>
	</div>
}
@if (_posts != null && _posts.Count == 0)
{
	<div class="d-flex justify-content-center">
		<span class="alert-info">Публикаций пока тчо нет(</span>
	</div>
}

